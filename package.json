    "hono": "^4.6.9",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "pg": "^8.14.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "uuid": "^13.0.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
